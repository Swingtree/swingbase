{
    "name": "swingtree/swingbase",
    "description": "A basic distribution of drupal 8 that will provide common configuration and our internal deployment managing tool",
    "type": "drupal-profile",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Swingtree",
            "email": "studio@swingtree.be"
        }
    ],
    "minimum-stability": "dev",
	"prefer-stable" : true,
	"require-dev":{},
    "require": {
		"drupal-composer/drupal-scaffold": "^2.0.0",
		"drupal/core": "~8.3",
        "drupal/autologout": "^1.0"
	},
	"bin": [
      "swingbase-subprofile"
    ],
    "config": {
        "bin-dir": "bin/"
    },
	"repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
	"scripts": {
        "post-install-cmd": [
            "@composer drupal-scaffold",
			"Swingbase\\Composer\\SwingbaseScripts::sitesDefaultFiles"
        ],
		"post-update-cmd": [
            "@composer drupal-scaffold",
			"Swingbase\\Composer\\SwingbaseScripts::sitesDefaultFiles"
        ],
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
    },
	"extra": {
        "installer-paths": {
            "www/core": ["type:drupal-core"],
            "www/libraries/{$name}": ["type:drupal-library"],
            "www/profiles/swingbase/modules/contrib/{$name}": ["type:drupal-module"]
        },
        "patches": {}
    },
	"autoload": {
		"psr-4": {
		  "Swingbase\\Composer\\": "src/Composer"
		}
	}
}
